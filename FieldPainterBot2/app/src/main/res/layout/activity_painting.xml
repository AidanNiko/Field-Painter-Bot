<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/genericbg_2">

    <!-- Title -->
    <TextView
        android:id="@+id/paintingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Painting Field"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/oswald_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Status Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/paintingTitle"
        app:layout_constraintBottom_toTopOf="@id/cancelButton"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="20dp">

            <ImageView
                android:id="@+id/loadingAnimation"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/animation_loading"
                android:layout_gravity="center"
                android:layout_marginTop="8dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:progress="45"
                android:max="100"
                android:progressTint="#4CAF50" />

            <TextView
                android:id="@+id/batteryStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery: 85%"
                android:fontFamily="@font/oswald_bold"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/paintStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paint Remaining: 60%"
                android:fontFamily="@font/oswald_bold"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/connectionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connection: Connected"
                android:fontFamily="@font/oswald_bold"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:textColor="#333333" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>




    <!-- Cancel Button -->
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/oswald_bold"
        android:backgroundTint="@color/black"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
