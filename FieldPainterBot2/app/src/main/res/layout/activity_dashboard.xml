<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/genericbg">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/undershadow"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="20dp">

        <TextView
            android:id="@+id/DashboardText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/db_title"
            android:textSize="30sp"
            android:fontFamily="@font/oswald_bold"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/bluetooth_icon"
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/bluetooth_icon"
            android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/percentLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/battery_percent"
                android:textSize="15sp"
                android:fontFamily="@font/oswald_bold"
                android:textColor="@color/black"
                android:layout_marginEnd="2dp"/>

            <ImageView
                android:id="@+id/battery_icon"
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/battery_0"/>
        </LinearLayout>

    </LinearLayout>


    <!-- Main content in the middle -->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header">

            <!-- First Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/header_clickable_1"
                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="12dp"
                app:strokeColor="#DDDDDD"
                app:strokeWidth="1dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/container1"
                        android:contentDescription="TODO" />

                    <!-- Footer overlay -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/footer_text_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Card 1"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Second Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/header_clickable_2"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="12dp"
                app:strokeColor="#DDDDDD"
                app:strokeWidth="1dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/container2"
                        android:contentDescription="TODO" />

                    <!-- Footer overlay -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/footer_text_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Card 2"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
